<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div class="error_message">
      <h2>【エラー内容】</h2>

      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <b><%= form.label :タイトル %></b><br>
    <%= form.text_field :title %>
  </div>

  <div class="field">
    <b><%= form.label :内容 %></b><br>
    <%= form.text_area :body %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
